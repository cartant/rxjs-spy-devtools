{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "importHelpers": false,
    "lib": ["dom", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "paths": {
      "@devtools/*": ["node_modules/rxjs-spy/devtools/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017"
  },
  "exclude": [],
  "include": ["./source/**/*.ts"]
}
